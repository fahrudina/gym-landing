# SEO Optimization for SRY Fitness Center
# This file should be deployed to your production server

# Enable GZIP compression for faster loading (improves SEO ranking)
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/plain
    AddOutputFilterByType DEFLATE text/html
    AddOutputFilterByType DEFLATE text/xml
    AddOutputFilterByType DEFLATE text/css
    AddOutputFilterByType DEFLATE text/javascript
    AddOutputFilterByType DEFLATE application/xml
    AddOutputFilterByType DEFLATE application/xhtml+xml
    AddOutputFilterByType DEFLATE application/rss+xml
    AddOutputFilterByType DEFLATE application/javascript
    AddOutputFilterByType DEFLATE application/x-javascript
    AddOutputFilterByType DEFLATE application/json
</IfModule>

# Set proper cache headers for static assets (improves Core Web Vitals)
<IfModule mod_expires.c>
    ExpiresActive On

    # Images (cache for 1 year)
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/webp "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"

    # CSS and JavaScript (cache for 1 month)
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
    ExpiresByType text/javascript "access plus 1 month"

    # Fonts (cache for 1 year)
    ExpiresByType font/ttf "access plus 1 year"
    ExpiresByType font/otf "access plus 1 year"
    ExpiresByType font/eot "access plus 1 year"
    ExpiresByType font/woff "access plus 1 year"
    ExpiresByType font/woff2 "access plus 1 year"

    # HTML (don't cache - check every visit)
    ExpiresByType text/html "access plus 0 seconds"

    # Default
    ExpiresDefault "access plus 2 days"
</IfModule>

# Set proper headers for SEO
<IfModule mod_headers.c>
    # Enable HSTS (HTTPS security - Google loves this)
    Header always set Strict-Transport-Security "max-age=31536000; includeSubDomains"

    # Prevent X-Frame-Options to improve ranking
    Header always set X-Frame-Options "SAMEORIGIN"

    # Content Security Policy
    Header always set X-Content-Type-Options "nosniff"

    # UTF-8 Encoding
    Header always set Content-Type "text/html; charset=utf-8"

    # Remove server information (security + SEO)
    Header always unset Server
    Header always unset X-Powered-By
    Header always unset X-AspNet-Version
</IfModule>

# Rewrite engine for SEO-friendly URLs
<IfModule mod_rewrite.c>
    RewriteEngine On

    # Remove trailing slashes (optional - choose one approach)
    # RewriteCond %{REQUEST_FILENAME} !-d
    # RewriteRule ^(.+)/$ /$1 [L,R=301]

    # Redirect HTTP to HTTPS (important for SEO)
    RewriteCond %{HTTPS} off
    RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

    # Remove www for consistency (or use the opposite)
    # Uncomment one approach:

    # Option 1: Remove www
    # RewriteCond %{HTTP_HOST} ^www\.(.+)$ [NC]
    # RewriteRule ^(.*)$ https://%1/$1 [R=301,L]

    # Option 2: Add www
    # RewriteCond %{HTTP_HOST} !^www\. [NC]
    # RewriteRule ^(.*)$ https://www.%{HTTP_HOST}/$1 [R=301,L]

    # Handle React Router (SPA)
    # Rewrite requests to index.html for React routing
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^ index.html [QSA,L]
</IfModule>

# Disable directory listing (security + SEO)
Options -Indexes

# Custom error pages (SEO friendly)
ErrorDocument 404 /404.html
ErrorDocument 500 /index.html

# ETag optimization
<IfModule mod_headers.c>
    Header unset ETag
    FileETag None
</IfModule>
